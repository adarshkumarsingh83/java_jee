<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
    <comment>database properties</comment>
    <entry key="dataSource.driverClass">com.mysql.jdbc.Driver</entry>
    <entry key="dataSource.url">jdbc:mysql://</entry>
    <entry key="dataSource.hostname">127.0.0.1</entry>
    <entry key="dataSource.portNumber">:3306/</entry>
    <entry key="dataSource.database">jdbc</entry>
    <entry key="dataSource.extraParam">?autoReconnect=true</entry>
    <entry key="dataSource.username">root</entry>
    <entry key="dataSource.password">root</entry>

    <entry key="sql.SelectAllEmployee">SELECT EMP.EMPNO,EMP.EMPNAME,EMP.EMPEMAIL FROM JDBC.EMPLOYEE AS EMP</entry>
    <entry key="sql.SelectEmployee">SELECT EMP.EMPNO,EMP.EMPNAME,EMP.EMPEMAIL FROM JDBC.EMPLOYEE AS EMP WHERE EMP.EMPNO=?</entry>
    <entry key="sql.UpdateEmployee">UPDATE JDBC.EMPLOYEE SET EMPNAME=? ,EMPEMAIL=? WHERE EMPNO=?</entry>
    <entry key="sql.InsertEmployee">INSERT INTO JDBC.EMPLOYEE(EMPNO,EMPNAME,EMPEMAIL)VALUES(?,?,?)</entry>
    <entry key="sql.DeleteEmployee">DELETE FROM JDBC.EMPLOYEE WHERE EMPNO=?</entry>
</properties>